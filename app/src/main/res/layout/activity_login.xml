<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity" >

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facevook_login"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/roadtrip_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_skip_fblogin"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_facevook_login"
        android:layout_centerHorizontal="true"
        android:text="Skip login"
        android:textColor="@color/com_facebook_button_login_background_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/roadtrip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="RoadTrip"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="35sp" />

</RelativeLayout>